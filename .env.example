# ===========================================
# Environment Variables Template
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control!
# ===========================================

# QR Attendance Security
# Generate with: openssl rand -hex 32
QR_SECRET=your-qr-secret-here

# IP Address Hashing Salt (for privacy-preserving abuse detection)
# Generate with: openssl rand -hex 32
IP_HASH_SALT=your-ip-hash-salt-here

# Supabase Configuration
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Analytics (optional)
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Environment
NODE_ENV=development

# Zoom API - Server-to-Server OAuth (optional)
# Get these from: https://marketplace.zoom.us/develop/create (Server-to-Server OAuth app)
ZOOM_ACCOUNT_ID=
ZOOM_CLIENT_ID=
ZOOM_CLIENT_SECRET=

# Zoom Meeting SDK (optional - for embedded meetings)
# Get these from: https://marketplace.zoom.us/develop/create (Meeting SDK app)
ZOOM_SDK_KEY=
ZOOM_SDK_SECRET=

# Zoom Webhook Secret (optional - for receiving meeting events)
ZOOM_WEBHOOK_SECRET=

# School Network Configuration (optional - for IP-based attendance)
# SCHOOL_IP_RANGE=192.168.1

# Site URL (for CSRF validation in production)
# NEXT_PUBLIC_SITE_URL=https://your-domain.com
